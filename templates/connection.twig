
{% extends 'base.twig' %}

{% block title %}Se Connecter - TheGoodPlan{% endblock %}


{% block content %}
    <main class="cadre">
        <h1>Se Connecter</h1>
        <p>Nouveau sur le site ? <a href="?uri=/inscription" class="blue-link">S’inscrire</a></p>
        <form action="index.php?action=authenticate" method="post">
            <label for="mail">E-mail *</label>
            <input type="email" name="mail"required>

            <label for="password">Mot de passe *</label>
            <input type="password" name="password" required>

            <button type="submit">Se connecter</button>
        </form>
        {% if connected is defined and connected == "false" %}
                    <p style="color: red;">Identifiants invalides. Veuillez réessayer.</p>
        {% endif %}
    </main>
{% endblock %}

