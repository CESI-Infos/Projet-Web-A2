{% extends 'base.twig' %}

{% block title %}Supprimer une entreprise - TheGoodPlan{% endblock %}

{% block content %}
    <h1>Supprimer l'entreprise {{ company.NAME }}</h1>
    <p>Êtes-vous sûr de vouloir supprimer l'entreprise <strong>{{ company.NAME }}</strong> ?</p>

    <form action="?uri=/delete-company" method="POST">
        <input type="hidden" name="ID" value="{{ company.ID }}">
        <button type="submit">Oui, supprimer</button>
        <a href="?uri=/browsecompanies">Annuler</a>
    </form>
{% endblock %}
