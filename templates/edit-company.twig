{% extends 'base.twig' %}

{% block title %}Modifier une entreprise - TheGoodPlan{% endblock %}

{% block content %}
    <h1>Modifier {{ company.NAME }}</h1>

    {% if company.ID is defined and company.ID is not empty %}
        <form action="?uri=/edit-company" method="POST">
            <!-- Ajout de 'required' pour s'assurer que l'ID est bien envoyé -->
            <input type="hidden" name="ID" value="{{ company.ID }}">

            <label for="name">Nom</label>
            <input type="text" id="name" name="NAME" value="{{ company.NAME }}" required>

            <label for="description">Description</label>
            <textarea id="description" name="DESCRIPTION" required>{{ company.DESCRIPTION }}</textarea>

            <label for="mail">E-mail</label>
            <input type="email" id="mail" name="MAIL" value="{{ company.MAIL }}" required>

            <label for="phone">Téléphone</label>
            <input type="text" id="phone" name="PHONE" value="{{ company.PHONE }}" required>

            <button type="submit">Modifier</button>
        </form>
    {% else %}
        <p style="color: red;">❌ Erreur : ID de l'entreprise introuvable.</p>
    {% endif %}

{% endblock %}
